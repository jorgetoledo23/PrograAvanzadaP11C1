@model Categoria

@{
    ViewData["Title"] = "Crear Catergorias";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="card text-center">
    <div class="card-header">
        Creacion de Categorias
    </div>
    <div class="card-body">
        <a asp-action="Index"
           class="btn btn-outline-primary"><i class="fa-solid fa-list me-2"></i>Volver al Listado de Categorias</a>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group m-2">
                <input asp-for="Name" class="form-control" placeholder="Nombre de la Categoria" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <input asp-for="Descripcion" class="form-control" placeholder="Descripcion" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <input type="submit" value="Crear Categoria" class="btn btn-outline-danger col-12" />
            </div>
        </form>
    </div>
</div>

<div class="mt-5">
    <a class="btn btn-outline-danger" asp-action="Index">Regresar al Listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

@model Marca

@{
    ViewData["Title"] = "Editar Marca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="card text-center">
    <div class="card-header">
        Editando Marca <strong>@Model.Name</strong>
    </div>
    <div class="card-body">
        <a asp-action="Index"
           class="btn btn-outline-primary"><i class="fa-solid fa-copyright me-2"></i>Volver al Listado de Marcas</a>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" value="@Model.Id" hidden />
            <div class="form-group m-2">
                <input asp-for="Name" value="@Model.Name" class="form-control" placeholder="Nombre de la Marca" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <input asp-for="Descripcion" value="@Model.Descripcion" class="form-control" placeholder="Descripcion" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <input type="submit" value="Guardar Cambios" class="btn btn-outline-danger col-12" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

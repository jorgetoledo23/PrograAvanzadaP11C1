@model Marca

@{
    ViewData["Title"] = "Editar Marca";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Modifique la Informacion de la Marca</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" value="@Model.Id" hidden />
            <div class="form-group m-2">
                <input asp-for="Name" value="@Model.Name" class="form-control" placeholder="Nombre de la Marca" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <input asp-for="Descripcion" value="@Model.Descripcion" class="form-control" placeholder="Descripcion" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group m-2">
                <input type="submit" value="Guardar Cambios" class="btn btn-outline-danger col-12" />
            </div>
        </form>
    </div>
</div>

<div class="mt-5">
    <a class="btn btn-outline-danger" asp-action="Index">Regresar al Listado</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
